<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Ne pas réécrire si c'est un fichier existant OU un dossier existant
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Exclure /spirit/api pour que le proxy PHP fonctionne
  RewriteCond %{REQUEST_URI} !^/spirit/api/
  
  # Redirige tout vers index.html pour React Router
  RewriteRule ^ index.html [QSA,L]
</IfModule>
